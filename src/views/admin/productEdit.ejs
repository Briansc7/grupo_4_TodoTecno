<html lang="en">

<%- include("../partials/head",{title: head.title, stylesheet: head.stylesheet}) %>

<body>
    <%- include("../partials/header") %>
 
<main>
<% if(product) { %>
<form action="/admin/productEdit/<%= product.id %>?_method=PUT" method="POST">
    
<h1>Modificar producto</h1>

    <div class="product-create">
        <%- include("../partials/create-edit-product-inputs", {product}) %>        
    </div>

</form>
<form action="/admin/productDelete/<%= product.id %>?_method=DELETE" method="POST">
    <button class="submit" type="submit">Eliminar Producto</button>
 </form>
 <% }else { %>
    <h2>No existe el producto</h2>
<% } %>
</main>


    <%- include("../partials/footer") %>
